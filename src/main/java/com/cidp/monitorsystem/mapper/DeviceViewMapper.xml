<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.cidp.monitorsystem.mapper.DeviceViewMapper">

    <select id="selectCupByIp" resultType="com.cidp.monitorsystem.model.Cpu">
         select * from cpu where ip = #{ip} order by time desc
    </select>
    <select id="selectMemoryByIp" resultType="com.cidp.monitorsystem.model.Memory">
        select * from memory where ip = #{ip} order by time desc
    </select>

    <select id="selectInterfaceByIp" resultType="com.cidp.monitorsystem.model.InterFlow">
        select ip,interDescr from InterFlow where ip = #{ip} order by time desc
    </select>
    <select id="selectInterfaceflowByInter" resultType="com.cidp.monitorsystem.model.InterFlow">
        select * from InterFlow where ip = #{ip} and  interDescr = #{interDescr}
    </select>
</mapper>